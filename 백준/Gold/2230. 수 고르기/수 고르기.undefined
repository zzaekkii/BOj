#include <bits/stdc++.h>
#define MAX 100001
using namespace std;

int N, M;
int A[MAX];
int ans=0x7fffffff;

int main(){
	ios_base::sync_with_stdio(0); cin.tie(0);
	cin >> N >> M;
	
	for(int i=0;i<N;i++)
		cin >> A[i];
	
	sort(A, A+N);
	
	int st=0, en=0;
	for(;st<N;st++){
		while(en<N&&(A[en]-A[st])<M)en++;
		if(en<N)ans=min(ans,A[en]-A[st]);
	}
	
	cout << ans;
}